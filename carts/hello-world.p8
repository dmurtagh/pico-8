-- pico-8 gamedev #1
-- getting started

function _init()
 msg="fuck knuckle"
 x=40 y=64
 dx=1 dy=1
end

function _update()
 x+=dx y+=dy
 if x<1 or x>128-#msg*4 then
  dx*=-1
 elseif y<1 or y>127-5 then
  dy*=-1
 end
end

function _draw()
-- cls(x%16)
 print(msg,x,y,y%16)
end
