version 18
__lua__
-- pico-8 gamedev #2
-- space...

function _init()
 stars={}
 star_cols={1,2,5,6,7,12}
 warp_factor=3
 
 -- create starfield
 for i=1,#star_cols do
  for j=1,10 do
   local s={
    x=rnd(128),
    y=rnd(128),
    z=i,
    c=star_cols[i]
   }
   add(stars,s)
  end
 end
end

function _update()
 -- move stars
 for s in all(stars) do
  -- move star, based on z-order depth
  s.y+=s.z*warp_factor/10
  -- wrap star around the screen
  if s.y>128 then
   s.y=0
   s.x=rnd(128)
  end
 end
end

function _draw()
cls()
-- draw stars
for s in all(stars) do
 pset(s.x,s.y,s.c)
end
end
